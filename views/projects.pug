extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Projects
         form(method='GET' action='/projects/search')
          input#searchInput.form-control(type='text', placeholder='narrow it down' name='search')
          button#search.btn.btn-success(type="button") Go

  .main.container
    .row
      .col-md-6.col-md-offset-3       
        each project in display 
         div.card.bg-warning.text-white.p-5.m-5.d-inline 
           div.card-overlay
            h2= project.name
              
            div.card-body.mt-2
             p.font-weight-light= project.genre




